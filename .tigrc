set line-graphics = utf-8

set refresh-mode = auto

set reference-format = (branch) (remote) <tag>
set mouse = yes
set mouse-scroll = 3
set status-show-untracked-dirs = yes
set status-show-untracked-files = yes

set main-view = \
  id:yes \
  commit-title:yes,graph,refs,overflow=yes

color id     8 default bold
color cursor default 89 bold
