#!/bin/sh

set -e

SERVER=$1

tit() { printf "\n $(tput bold)$1$(tput sgr0)\n\n"; }
success() { printf " $(tput setaf 8)›  $(tput setaf 10)✓\t$(tput sgr0)$1\n"; }
info() { printf " $(tput setaf 8)›  $(tput setaf 12)…\t$(tput sgr0)$1\n"; }
cmd() { printf " $(tput setaf 8)›  $(tput setaf 14)↘️\t$(tput bold)$(tput setaf 8)$1$(tput sgr0)\n"; }

tit "Brew Setup"

# Ask for the administrator password upfront
sudo -v

# Make sure we’re using the latest Homebrew
info "Update and upgrade brew"
brew update && brew upgrade

# Taps
info "Tapping"
brew tap eddieantonio/eddieantonio
brew tap osx-cross/avr
brew tap sudar/arduino-mk

FORMULAS=(
  # GNU core utilities (those that come with OS X are outdated)
  coreutils

  # Compilers
  make
  cmake
  mono

  # GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
  findutils

  # Just, because
  bash

  # Wget with iri
  wget

  # Git
  git
  tig
  git-delta

  # Mah IDE
  tmux
  # Uninstall first? Upgrade drops the override-system-vim
  macvim
  neovim

  # Zsh
  zsh-autosuggestions
  zsh-syntax-highlighting

  # Useful tools
  trash
  ack
  the_silver_searcher
  rename
  todo-txt
  httpie
  fzf
  z
  diff-so-fancy
  yarn
  awscli
  azure-cli
  watchman
  fswatch
  ranger
  imgcat
  jq # JSON parser
  fontforge # For custom font icon patching
  mdv # CLI Markdown viewer
  bat # Nicer cat
  ncdu # Nicer du
  tldr # Nicer man
  gnupg
  less # Newer less
  ripgrep # Faster grepping

  # Certificate tools
  openssl
  mkcert
  nss

  # Languages
  node
  nvm
  haskell-stack
  # python@2
  # python3


  # Gifiy
  ffmpeg
  gifsicle
  imagemagick
)

CASKS=(
  kitty

  # Gifify
  xquartz

  # Dev Tools
  react-native-debugger
  imageoptim

  # Other
  dropbox
  appcleaner

  docker

  # sip # Color select/organise
  sim-daltonism # Color blindness simulator

  slack

  figma

  bricklink-studio

  dosbox
)

CASKS_SERVER=(
  kitty

  nginx
  sabnzbd
  sonarr
  radarr

  virtualbox
)

# TODO: To Save
# Fonts

# Not available or still figuring out:
# Xcode

formula_exists() {
  if $(brew list | grep $1 > /dev/null); then
    return 0
  fi

  return 1
}

cask_exists() {
  if $(brew list | grep $1 > /dev/null); then
    return 0
  fi

  return 1
}


for index in ${!FORMULAS[*]}
do
  if ! formula_exists ${FORMULAS[$index]}; then
    info "${FORMULAS[$index]} not installed, installing..."
    brew install ${FORMULAS[$index]}
  else
    success "${FORMULAS[$index]} already installed, skipping"
  fi
done

if [ "$SERVER" == "server" ];
then
  info "Installing server casks"
  CASK_LIST=("${CASKS_SERVER[@]}")
else
  info "Installing casks"
  CASK_LIST=("${CASKS[@]}")
fi

for index in ${!CASK_LIST[*]}
do
  if ! cask_exists ${CASK_LIST[$index]}; then
    info "${CASK_LIST[$index]} not installed, installing..."
    brew install ${CASK_LIST[$index]}
  else
    success "${CASK_LIST[$index]} already installed, skipping"
  fi
done

# TODO: Needed?
# open /usr/local/Cellar/x-quartz/2.7.4/XQuartz.pkg

brew cleanup
