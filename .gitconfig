[alias]
	c = commit
	# cp = commit -p
	co = checkout
	p = push
	s = status -s

	wtf = blame

	# Updating local branch
	u = merge --ff-only
	l = fetch -avp

	# Show assume unchanged
	ignore = update-index --assume-unchanged
	unignore = update-index --no-assume-unchanged
	ignored = !git ls-files -v | grep '^[[:lower:]]'

	# Viewing changes
	# staged = diff --color --color-words --abbrev --cached

	# Commit Details
	# fileschanged = log --pretty=format:'%C(bold black)(%h)%C(reset) %C(bold magenta)%d%C(reset) %C(white)%s%C(reset) %C(black)(%ar, %an)%C(reset)' --decorate --numstat
	# dr = "!f() { git diff "$1"^.."$1"; }; f"
	# lc = "!f() { git fileschanged "$1"^.."$1"; }; f"

	# Commit graph
	tree = log --color --graph --pretty=format:'%C(bold magenta)%d%C(reset)%n %C(bold black)%h%C(reset) %C(white)%s%C(reset)%n				 %C(bold white)%aN (%aE)%C(reset)%n					%C(yellow)%ar%C(reset)' --decorate=short --all
	t = "log --color --graph --pretty=format:'%C(#75715e)%C(bold)%h%C(reset)%C(bold magenta)%d%C(reset) %C(white)%s%C(reset)' --all"
	sh = show --format='%C(bold black)%h%C(reset) %C(black)%aN (%aE)%C(reset)%n%n		 %C(white bold)%s%C(reset)%n%+b' --patch-with-stat --ignore-all-space

	# Kaleidoscope
	dk = difftool -y -t Kaleidoscope
	mk = mergetool -y -t Kaleidoscope
[color]
	ui = auto
[credential]
	helper = osxkeychain
[core]
	excludesfile = ~/.gitignore-global
	attributesfile = ~/.gitattributes
	pager = diff-so-fancy | less --tabs=4 -RFX
	autocrlf = input
	ignorecase = false
[color "diff"]
	meta = yellow bold
	commit = green bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = "red bold"
	oldHighlight = "red bold 52"
	newNormal = "green bold"
	newHighlight = "green bold 22"
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[merge]
	log = true
	defaultToUpstream = true
	tool = vimdiff
[mergetool]
	prompt = false
	keepbackup = false
[rebase]
	autostash = true
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true

[help]
	autocorrect = 1
[push]
	default = tracking

[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
	insteadOf = "gist:"

